{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "src/**",
      "public/**",
      "package.json",
      "package-lock.json",
      "vite.config.js",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "startCommand": "npx serve -s build -l 3000",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "on_failure"
  }
}